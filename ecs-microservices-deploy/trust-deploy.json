{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowPushesByRepoAndRef",
      "Effect": "Allow",
      "Principal": {
        "Federated": "arn:aws:iam::803767876973:oidc-provider/token.actions.githubusercontent.com"
      },
      "Action": "sts:AssumeRoleWithWebIdentity",
      "Condition": {
        "StringEquals": {
          "token.actions.githubusercontent.com:aud": "sts.amazonaws.com",
          "token.actions.githubusercontent.com:repository": "PisforFree/ecs-microservice-deploy",
          "token.actions.githubusercontent.com:ref": "refs/heads/main"
        }
      }
    },
    {
      "Sid": "AllowPRsBySubjectPattern",
      "Effect": "Allow",
      "Principal": {
        "Federated": "arn:aws:iam::803767876973:oidc-provider/token.actions.githubusercontent.com"
      },
      "Action": "sts:AssumeRoleWithWebIdentity",
      "Condition": {
        "StringEquals": {
          "token.actions.githubusercontent.com:aud": "sts.amazonaws.com"
        },
        "StringLike": {
          "token.actions.githubusercontent.com:sub": [
            "repo:PisforFree/ecs-microservice-deploy:ref:refs/heads/*",
            "repo:PisforFree/ecs-microservice-deploy:pull_request"
          ]
        }
      }
    }
  ]
}

