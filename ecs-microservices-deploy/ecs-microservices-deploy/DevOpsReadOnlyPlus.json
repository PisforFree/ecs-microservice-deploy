{
  "Version": "2012-10-17",
  "Statement": [{
    "Sid": "SafeReadAccess",
    "Effect": "Allow",
    "Action": [
      "ec2:Describe*",
      "elasticloadbalancing:Describe*",
      "ecs:Describe*",
      "ecs:List*",
      "servicediscovery:List*",
      "servicediscovery:Get*",
      "logs:Describe*",
      "logs:Get*",
      "logs:List*",
      "cloudwatch:Describe*",
      "cloudwatch:Get*",
      "cloudwatch:List*",
      "ecr:Describe*",
      "ecr:GetAuthorizationToken",
      "ecr:BatchGetImage",
      "ecr:GetDownloadUrlForLayer",
      "iam:Get*",
      "iam:List*",
      "s3:Get*",
      "s3:List*"
    ],
    "Resource": "*"
  }]
}
