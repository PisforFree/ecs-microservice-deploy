{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowReadTaskRoles",
      "Effect": "Allow",
      "Action": [
        "iam:GetRole",
        "iam:ListRolePolicies",
        "iam:GetRolePolicy",
        "iam:ListAttachedRolePolicies"
      ],
      "Resource": [
        "arn:aws:iam::803767876973:role/micro-dev-task-exec-role",
        "arn:aws:iam::803767876973:role/micro-dev-task-role"
      ]
    },
    {
      "Sid": "AllowPassTaskRolesToECSTasks",
      "Effect": "Allow",
      "Action": [
        "iam:PassRole"
      ],
      "Resource": [
        "arn:aws:iam::803767876973:role/micro-dev-task-exec-role",
        "arn:aws:iam::803767876973:role/micro-dev-task-role"
      ],
      "Condition": {
        "StringEquals": {
          "iam:PassedToService": "ecs-tasks.amazonaws.com"
        }
      }
    }
  ]
}
